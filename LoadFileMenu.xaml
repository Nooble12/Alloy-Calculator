<Window x:Class="TerraFirmaCraftCalc.LoadFileMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Load File" Height="300" Width="400">
    <Grid>
        <ListBox x:Name="FileListBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10"/>
        
        <Button Content="Load Selected File" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10"
                Width="150" Click="LoadFileButton_Click"/>
    </Grid>
</Window>